<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/copyAddressButton"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Copy address"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/serverAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyAddressButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:text="Server Address: " />

    <TextView
        android:id="@+id/serverStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverAddressTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="Local server is working" />

    <Button
        android:id="@+id/openServerButton"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@id/serverStatusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Open server"
        android:textSize="20sp" />

    <Button
        android:id="@+id/restartServerButton"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@id/openServerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Restart server"
        android:textSize="20sp" />

</RelativeLayout>
