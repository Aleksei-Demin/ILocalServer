<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/serverAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/copyAddressButton"
        android:textSize="24sp"
        android:text="Server Address: " />

    <Button
        android:id="@+id/copyAddressButton"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Copy address"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/serverStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyAddressButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:text="Local server is not working" /> <!-- Default text -->
</RelativeLayout>